[user]
	email = fosterlounch@gmail.com
	name = feelamee
	signingkey = DAA711F70F7A1405

[core]
	editor = nvim

[init]
	defaultBranch = master

[log]
	date = format:%D %I:%M %p

[pretty]
	useful = %<(7 trunc)%Cblue%h %<|(80 trunc)%C(3)%s %>|(-29 ltruct)%Cgreen%an %>|(-9 ltrunc)%Creset%ad

[alias]
	logg = log --format=short --graph

[alias]
	lol = log --format=useful
	st = status
	ds = diff --staged
	lod = lol -n10
	co = checkout
	ca = commit --amend
	dne = diff --no-ext-diff
	dse = diff --staged --no-ext-diff

[status]
	short = true

[commit]
	gpgSign = false
	verbose = true

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[http]
	postBuffer = 524288000
